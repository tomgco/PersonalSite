*
	margin 0
	padding 0

img
	virtical-align bottom

a
	text-decoration none

a:hover
	text-decoration none

a img
	border 0

a, ::-moz-focus-inner
	outline none
	border none

ul li
	list-style-image none
	list-style-position outside
	list-style-type none
	margin-top 0px

b.greenbar
	position absolute
	top 0
	right 0
	width 100%
	height 2px
	background green
	
@font-face
	font-family: 'SteinerRegular';
	src: url('/fonts/steinerlight-webfont.eot');
	src: url('/fonts/steinerlight-webfont.eot?#iefix') format('embedded-opentype'), url('/fonts/steinerlight-webfont.woff') format('woff'), url('/fonts/steinerlight-webfont.ttf') format('truetype'), url('/fonts/steinerlight-webfont.svg#SteinerRegular') format('svg');
	font-weight: normal;
	font-style: normal;
	
html, body
	height 100%

body
	background-repeat no-repeat
	font-family monospace
	overflow-y scroll
	background: #FFFFFF url('/images/background.jpg') repeat
	
#container
	position relative
	width 1095px
	margin 0 auto -28px //must be negative of height defined in footer, .push
	min-height 100%
	height auto !important
	height 100%
	z-index 1338

footer, .push
	height 28px
	clear both

	
header, section, article, footer
	display block
	
h1, h2
	font-family 'SteinerRegular'
	font-size 27px
	text-shadow 0px 1px 0px #ddd
	color #333

h3, h4
	color #E5E5E5
	text-shadow #111 1px -1px 0px

header
	padding 33px 0 29px 0
	
header h1
	font-size 32px
	width 300px
	text-align center
	margin 0 auto

header ul
	margin -10px auto 10px
	width 414px

header li
	display inline
	font-size 11px
	padding 0px 4px 0px 4px
	color: #999;
	text-decoration: none;
	text-shadow: #EEE 0 1px 0;
	text-transform: uppercase;

#sidebar
	position relative
	float left
	width 260px
	margin-right 17px
	height 483px
	
#twitter
	padding-top 8px
	font-size 12px
	height 345px
	
#social h2
	display inline
	padding-right 15px

.tweet
	color #6C6C6C
	text-decoration none
	text-shadow #fff 0px 1px 0px
	padding 7px 0px 7px 0px
	font-size 12px

.tweet a
	color #313131
	text-decoration none
	text-shadow #fff 0px 1px 0px
	
nav ul
	padding-bottom 30px

nav li
	padding-top 5px
	padding-bottom 5px

nav li a
	color #999
	text-decoration none
	text-shadow #eee 0px 1px 0px

nav li a.active
	color #2e2e2e
	text-decoration none
	text-shadow #eee 0px 0px 0px

nav li a:hover
	color #555

footer
	color #696969
	position relative
	z-index 50

footer .copyright
	padding-right 15px
	
footer ul
	width 711px
	margin 0 auto

footer li
	background-position right 1px
	background-repeat no-repeat
	display inline
	font-size 11px
	padding 0px 10px 0px 9px

footer li a
	color #696969
	padding 0px 5px 0px 7px

input.command
	background-color white
	color white
	border 0px none
	font-size 12px
	font-family monospace
	cursor default
	outline none
	width 1px
	height 1px
	
/*
* codeblock style
*/

pre
	margin 1em 0
	font-size 12px
	background-color #454545
	border 1px solid #555
	padding 5px
	color #1EFD00
	overflow auto
	-webkit-box-shadow rgba(0,0,0,0.07) 0 1px 2px inset
	-webkit-border-radius 3px
	-moz-border-radius 3px
	border-radius 3px
